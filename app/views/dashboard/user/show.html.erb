<div class="flex flex-col bg-post-wrapper rounded-lg h-full p-5 mx-4">
  <div class="m-h-20">
    <%= render Components::UserPreview.new(without_bg: true) do |p| %>
      <%= p.avatar @user.config.avatar %>
      <%= p.text { @user.username } %>
    <% end %>
  </div>

  <div class="flex h-2/3">
    <%= turbo_frame_tag "recent_posts", class: "flex flex-col grow-1 bg-post-wrapper rounded-sm w-3/5" do %>
      <h2 class="post-title mt-5">User recent Posts</h2>

      <%= turbo_frame_tag "modal_new_post" %>
      <%= turbo_frame_tag "posts", src: dashboard_user_recent_posts_path(id: @user.id), loading: 'lazy', class: "flex flex-wrap w-full h-full mt-2" %>
    <% end %>
  </div>
</div>
