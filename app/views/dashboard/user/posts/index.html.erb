<div class="flex flex-col w-full h-full p-4">
	<div class="flex justify-between w-full h-1/2">
		<%= turbo_frame_tag "recent_posts", class: "flex flex-col bg-post-wrapper rounded-sm w-3/5 h-full p-5 me-2" do %>
			<div class="flex justify-between">
				<h2 class="post-title">Your recent Posts</h2>
				<%= link_to "New Post", dashboard_user_posts_new_path, class: "border bg-linear-to-r from-blue-400 to-fuchsia-400 rounded-xl p-1 px-2", data: {turbo_frame: "modal_new_post"} %>
			</div>

			<%= turbo_frame_tag "modal_new_post" %>
			<%= turbo_frame_tag "posts", src: dashboard_user_recent_posts_path, loading: 'lazy', class: "flex flex-wrap w-full h-full mt-3 p-3" %>
		<% end %>
		<div class="flex flex-col w-4/10 ms-2">
				<%= render Components::UserPreview.new do |p| %>
					<%= p.avatar(Current.user.config.avatar) %>
					<%= p.text {"Welcome #{Current.user.username}"} %>
				<% end %>

			<%= turbo_frame_tag "friend_posts", src: dashboard_user_friends_posts_path, class: "flex flex-col bg-post-wrapper rounded-lg p-5 h-full mt-3" %>
		</div>
	</div>

	<%= turbo_frame_tag "comentarios" %>
</div>
